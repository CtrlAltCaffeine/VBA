from taipy.gui import Gui
import pandas as pd

path1 = None
data1 = None
path2 = None
data2 = None
path3 = None
data3 = None

md = """
<|{path1}|file_selector|label=Upload dataset for Tab 1|on_action=load_csv_file_1|extensions=.csv|>
<|{data1}|table|rebuild|>

<|{path2}|file_selector|label=Upload dataset for Tab 2|on_action=load_csv_file_2|extensions=.csv|>
<|{data2}|table|rebuild|>

<|{path3}|file_selector|label=Upload dataset for Tab 3|on_action=load_csv_file_3|extensions=.csv|>
<|{data3}|table|rebuild|>
"""

def load_csv_file_1(state):
    state.data1 = pd.read_csv(state.path1)
    print(state.data1)

def load_csv_file_2(state):
    state.data2 = pd.read_csv(state.path2)
    print(state.data2)

def load_csv_file_3(state):
    state.data3 = pd.read_csv(state.path3)
    print(state.data3)

gui = Gui(md)
gui.run()

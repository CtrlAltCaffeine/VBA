@app.route('/')
def index():
    return render_template('index.html')

@app.route('/result', methods=['POST'])
def result():
    choice = request.form['landmark']

    if choice == 'taj_mahal':
        description = "The Taj Mahal is an iconic white marble mausoleum located in Agra, India."

    elif choice == 'eiffel_tower':
        description = "The Eiffel Tower is a wrought-iron lattice tower located in Paris, France."

    else:
        description = "Invalid selection."

    return render_template('result.html', description=description)

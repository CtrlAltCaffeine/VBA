Sub ImportAndAnalyzeNifty50Data()
    Dim ws As Worksheet
    Set ws = ThisWorkbook.Sheets("Nifty50Data")
    
    ' Clear existing data
    ws.Cells.Clear
    
    ' Import CSV data
    With ws.QueryTables.Add(Connection:="TEXT;nifty_50_data.csv", Destination:=ws.Range("A1"))
        .TextFileParseType = xlDelimited
        .TextFileConsecutiveDelimiter = False
        .TextFileTabDelimiter = False
        .TextFileSemicolonDelimiter = False
        .TextFileCommaDelimiter = True
        .TextFilePlatform = xlWindows
        .Refresh BackgroundQuery:=False
    End With
    
    ' Calculate average closing price for each stock
    Dim lastRow As Long
    lastRow = ws.Cells(ws.Rows.Count, "A").End(xlUp).Row
    
    Dim stockSymbols As Collection
    Set stockSymbols = New Collection
    
    Dim i As Long
    For i = 2 To lastRow
        On Error Resume Next
        stockSymbols.Add ws.Cells(i, 1).Value, CStr(ws.Cells(i, 1).Value)
        On Error GoTo 0
    Next i
    
    Dim stock As Variant
    Dim startRow As Long
    Dim endRow As Long
    Dim totalClose As Double
    Dim count As Long
    Dim avgClose As Double
    Dim outputRow As Long
    outputRow = 2
    
    ws.Cells(1, "G").Value = "Stock Symbol"
    ws.Cells(1, "H").Value = "Average Closing Price"
    
    For Each stock In stockSymbols
        startRow = Application.WorksheetFunction.Match(stock, ws.Columns("A"), 0)
        endRow = Application.WorksheetFunction.Match(stock & ".99999999999", ws.Columns("A"), 1) - 1
        
        totalClose = Application.WorksheetFunction.Sum(ws.Range("F" & startRow & ":F" & endRow))
        count = endRow - startRow + 1
        avgClose = totalClose / count
        
        ws.Cells(outputRow, "G").Value = stock
        ws.Cells(outputRow, "H").Value = avgClose
        
        outputRow = outputRow + 1
    Next stock
    
    MsgBox "Data import and analysis complete!", vbInformation
End Sub

import os
import dask.dataframe as dd

folder_path = 'path_to_your_folder'

excel_files = [os.path.join(folder_path, filename) for filename in os.listdir(folder_path) if filename.endswith(".xlsx") or filename.endswith(".xls")]

ddf = dd.read_csv(excel_files)
master_df = ddf.compute()
master_file_path = os.path.join(folder_path, 'master_sheet.xlsx')
master_df.to_excel(master_file_path, index=False)

print(f'Master sheet created successfully at {master_file_path}')

import os
import pandas as pd
from concurrent.futures import ProcessPoolExecutor

folder_path = 'path_to_your_folder'

def read_excel_file(file_path):
    return pd.read_excel(file_path)

excel_files = [os.path.join(folder_path, filename) for filename in os.listdir(folder_path) if filename.endswith(".xlsx") or filename.endswith(".xls")]

with ProcessPoolExecutor() as executor:
    dfs = list(executor.map(read_excel_file, excel_files))

master_df = pd.concat(dfs, ignore_index=True)
master_file_path = os.path.join(folder_path, 'master_sheet.xlsx')
master_df.to_excel(master_file_path, index=False)

print(f'Master sheet created successfully at {master_file_path}')

import os
import dask.dataframe as dd

folder_path = 'path_to_your_folder'

csv_files = [os.path.join(folder_path, filename) for filename in os.listdir(folder_path) if filename.endswith(".csv")]

ddf = dd.read_csv(csv_files)

output_csv_path = os.path.join(folder_path, 'master_sheet.csv')
ddf.to_csv(output_csv_path, single_file=True)

print(f'Master sheet created successfully at {output_csv_path}')

function sendChartEmail() {
  // ID of the Google Sheet containing the chart
  var sheetId = 'YOUR_SHEET_ID';
  
  // Get the chart as a blob
  var sheet = SpreadsheetApp.openById(sheetId).getSheets()[0];
  var chart = sheet.getCharts()[0];
  var imageBlob = chart.getAs('image/png');

  // Create a temporary image file in Google Drive
  var tempImageFile = DriveApp.createFile(imageBlob);

  // Get the image URL
  var imageUrl = tempImageFile.getDownloadUrl();
  
  // Email details
  var recipient = 'recipient@example.com';
  var subject = 'Email with Chart';
  var body = '<p>Here is the chart from the Google Sheet:</p>';
  body += '<img src="' + imageUrl + '">';

  // Send the email
  MailApp.sendEmail({
    to: recipient,
    subject: subject,
    htmlBody: body
  });

  // Optionally, delete the temporary file
  tempImageFile.setTrashed(true);
}

import solara as sol

def main():
    sol.title("Home")
    user_type = sol.selectbox("Select User Type", ["Select", "Viewer", "Authenticator"], label_visibility="off")
    
    if sol.button('Submit'):
        if user_type == "Viewer":
            sol.session['user_type'] = "Viewer"
            sol.rerun()
        elif user_type == "Authenticator":
            sol.session['user_type'] = "Authenticator"
            sol.rerun()
        else:
            sol.warning('Please select a user type!')

def viewer_page():
    sol.title("Viewer Page")
    sol.write("""
    The Taj Mahal is an ivory-white marble mausoleum on the right bank of the Yamuna river in the Indian city of Agra.
    It was commissioned in 1632 by the Mughal emperor Shah Jahan to house the tomb of his favourite wife, Mumtaz Mahal.
    """)

def authenticator_page():
    sol.title("Authenticator Page")
    sol.write("""
    The Eiffel Tower is a wrought-iron lattice tower on the Champ de Mars in Paris, France.
    It is named after the engineer Gustave Eiffel, whose company designed and built the tower.
    """)

def app():
    pages = {
        "Home": main,
        "Viewer": viewer_page,
        "Authenticator": authenticator_page,
    }

    if 'user_type' not in sol.session:
        sol.session['user_type'] = 'Home'

    pages[sol.session['user_type']]()

if __name__ == "__main__":
    app()

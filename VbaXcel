function downloadFileFromEmail() {
  // Get all unread messages.
  var messages = GmailApp.getUnreadMessages();

  // Loop through the messages and search for HTML links.
  for (var i = 0; i < messages.length; i++) {
    var message = messages[i];
    var body = message.getBody();
    var links = body.match(/<a href="(.*?)"/g);

    // If a link is found, download the file.
    if (links != null) {
      for (var j = 0; j < links.length; j++) {
        var link = links[j];
        var fileName = link.substring(link.lastIndexOf("/") + 1);
        var file = Utilities.newBlob(link);
        var attachment = DriveApp.createFile(file);
        attachment.setName(fileName);
      }
    }
  }
}
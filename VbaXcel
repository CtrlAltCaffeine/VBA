import streamlit as st

# Define the main app
def main():
    st.title("Home")
    st.write("Please select your user type:")
    user_type = st.selectbox("", ["Select", "Viewer", "Authenticator"])
    
    if user_type == "Viewer":
        st.session_state.user_type = "Viewer"
    elif user_type == "Authenticator":
        st.session_state.user_type = "Authenticator"

# Define the viewer page
def viewer_page():
    st.title("Viewer Page")
    # Add your components for the viewer page here

# Define the authenticator page
def authenticator_page():
    st.title("Authenticator Page")
    # Add your components for the authenticator page here

# Define the app routing
def app():
    pages = {
        "Home": main,
        "Viewer": viewer_page,
        "Authenticator": authenticator_page,
    }

    if 'user_type' not in st.session_state:
        st.session_state.user_type = 'Home'

    # Display the selected page with the session_state
    pages[st.session_state.user_type]()

if __name__ == "__main__":
    app()
